# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'livereload', :apply_js_live => false, :apply_css_live => true do
  watch(%r{.+\.(css|js|html)$})
  watch(%r{build/.+\.(css|js|html)$})
  watch(%r{demos/.+\.(css|js|html)$})
  watch(%r{assets/.+\.(css|js|html|jpg|png|gif)$})
end
